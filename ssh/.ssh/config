Host github.com
  AddKeysToAgent yes
  UseKeychain yes
  IdentityFile ~/.ssh/id_ed25519

# Server A
Host a
    HostName x.xxx.xx.xx
    User ubuntu
    IdentityFile ~/xxx.pem

# Server A with Port Forwarding
Host a-db2
    HostName xx.xxx.xxx.xx
    User ubuntu
    IdentityFile ~/xx.pem
    LocalForward xxxx xxx.xx.x.xxx:xxxx

# Server A with Port Forwarding
Host a-db1
    HostName xxx.xx.xx.xx
    User ubuntu
    IdentityFile ~/xx.pem
    LocalForward xxxx xxxx.xxxxxx.com:xxxx

